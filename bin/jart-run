#!/bin/bash

# Run jar file in common location

set -o errexit
set -o nounset

JAR_PATH=${JAR_PATH:-$HOME/java}


if (( $# < 1 )); then
	echo "usage: ${0##*/} [java_options] <jar_file> -- [args_to_jar ...]"
	echo
	echo "Available jar files to run: "
	echo
	ls -1 $JAR_PATH | grep '\.jar$'
	exit 1
fi


# split command line args into java_options, jar_file, and args_to_jar

opts=''; last=''
while (( $# > 0 )); do
	if [[ $1 == "--" ]]; then
		shift
		break
	fi
	if [[ -n $last ]]; then
		opts+="$last "
	fi
	last=$1; shift
done

# append extension if it does not already exist

jar_file=$last
if [[ ${jar_file##*.} != "jar" ]]; then
	jar_file=${jar_file}.jar
fi

# load options file

jar_fstem=${jar_file%.*}
jar_opts_file=$JAR_PATH/${jar_fstem}.opts
default_opts=''
if [[ -f $jar_opts_file ]]; then
	default_opts=$(cat $jar_opts_file | tr '\n' ' ')
fi

# run jar file

#echo "java $default_opts $opts -jar $JAR_PATH/$jar_file $@"
java $default_opts $opts -jar $JAR_PATH/$jar_file "$@"

